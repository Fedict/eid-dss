<?xml version="1.0"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>oracle-zip</id>
	<baseDirectory>eid-dss-oracle-distribution</baseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target/files/eid-trust-service-oracle-distribution</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>jboss/bin/run.sh</exclude>
				<exclude>jboss/bin/shutdown.sh</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/files/eid-trust-service-oracle-distribution</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>jboss/bin/run.sh</include>
				<include>jboss/bin/shutdown.sh</include>
			</includes>
			<fileMode>0500</fileMode>
		</fileSet>
		<fileSet>
			<directory>target/deploy</directory>
			<outputDirectory>jboss/server/all/deploy</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/deploy</directory>
			<outputDirectory>jboss/server/default/deploy</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/files/eid-dss-ddl-oracle.sql</source>
			<outputDirectory>sql</outputDirectory>
		</file>
		<file>
			<source>target/files/eid-dss-admin-manual.pdf</source>
			<outputDirectory>manual</outputDirectory>
		</file>
	</files>
</assembly>
