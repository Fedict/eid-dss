<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>eID Digital Signature Service Portal Web Application</display-name>

	<!-- JBoss Seam -->
	<listener>
		<listener-class>org.jboss.seam.servlet.SeamListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>Seam Resource Servlet</servlet-name>
		<servlet-class>org.jboss.seam.servlet.SeamResourceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Seam Resource Servlet</servlet-name>
		<url-pattern>/seam/resource/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>Seam Filter</filter-name>
		<filter-class>org.jboss.seam.servlet.SeamFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Seam Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- JBoss Richfaces -->
	<context-param>
		<param-name>org.richfaces.SKIN</param-name>
		<param-value>DEFAULT</param-value>
	</context-param>
	<context-param>
		<param-name>org.ajax4jsf.VIEW_HANDLERS</param-name>
		<param-value>com.sun.facelets.FaceletViewHandler</param-value>
	</context-param>

	<!-- Facelets -->
	<context-param>
		<param-name>javax.faces.DEFAULT_SUFFIX</param-name>
		<param-value>.xhtml</param-value>
	</context-param>
	<context-param>
		<param-name>facelets.DEVELOPMENT</param-name>
		<param-value>true</param-value>
	</context-param>

	<!-- JSF -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.seam</url-pattern>
	</servlet-mapping>

	<!-- eID DSS Response Servlet -->
	<servlet>
		<servlet-name>SignatureResponseProcessor</servlet-name>
		<servlet-class>be.fedict.eid.dss.portal.SignatureResponseProcessorServlet</servlet-class>
		<init-param>
			<param-name>NextPage</param-name>
			<param-value>view-signed-xml.seam</param-value>
		</init-param>
		<init-param>
			<param-name>ErrorPage</param-name>
			<param-value>sign-error.seam</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignatureResponseProcessor</servlet-name>
		<url-pattern>/post-response</url-pattern>
	</servlet-mapping>

	<!-- XML document viewer -->
	<servlet>
		<servlet-name>DocumentViewer</servlet-name>
		<servlet-class>be.fedict.eid.dss.portal.DocumentViewerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DocumentViewer</servlet-name>
		<url-pattern>/signed-document.xml</url-pattern>
	</servlet-mapping>

</web-app>
