<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>zip</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>eid-dss-sdk-${project.version}</baseDirectory>
	<files>
		<file>
			<source>src/main/assembly/README.txt</source>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>../LICENSE.txt</source>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>target/dev-guide/eid-dss-dev-guide-${project.version}.pdf</source>
			<fileMode>0644</fileMode>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>target/client-javadoc</directory>
			<outputDirectory>eid-dss-client-javadoc</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/protocol-simple-client-javadoc</directory>
			<outputDirectory>eid-dss-protocol-simple-client-javadoc
			</outputDirectory>
			<excludes>
				<exclude>META-INF/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>be.fedict.eid-dss:*</include>
			</includes>
			<excludes>
				<exclude>be.fedict.eid-dss:eid-dss-dev-guide</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<excludes>
				<exclude>be.fedict.eid-dss:*</exclude>
			</excludes>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>
